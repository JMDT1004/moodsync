<main class="">

    <div class="flex flex-col rounded-lg p-4 m-10 shadow-lg hover:shadow-2xl justify-start">
        <form action="/mood/{{this.id}}" method="POST"></form>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="{{this.title}}">

        <label for="entry">Entry:</label>
        <textarea id="entry" name="entry">{{this.entry}}</textarea>

        <button type="submit">Save</button>

        </form>
        <button id="deleteButton" onclick="deleteEntry('{{this.id}}')">Delete</button>
    </div>

    <section class="flex flex-col">
        <p>Entry info:</p>
        <p class="{{this.angerColor}}">Anger: {{this.anger}}</p>
        <p class="{{this.fearColor}}">Fear: {{this.fear}}</p>
        <p class="{{this.sadnessColor}}">Sadness: {{this.sadness}}</p>
        <p class="{{this.disgustColor}}">Disgust: {{this.disgust}}</p>
        <p class="{{this.surpriseColor}}">Surprise: {{this.surprise}}</p>
        <p class="{{this.joyColor}}">Joy: {{this.joy}}</p>
    </section>
</main>


<script>
    function deleteEntry(entryId) {
        if (confirm('Are you sure you want to delete this entry?')) {
            // Send a DELETE request to delete the entry
            fetch('/mood/' + entryId, {
                method: 'DELETE'
            })
        }
    }
</script>