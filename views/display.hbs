<main class="bg-gray-300 py-4">
  <div class="bg-gray-400 rounded-lg px-4 mx-10 my-4 py-8 shadow-lg justify-start">
    <form class=" flex flex-col m-4 p-4" action="/mood/{{this.id}}" method="POST">
      <label for="title" class="text-lg font-semibold mb-2">Title:</label>
      <input class="border border-gray-300 rounded-md py-2 px-3 mb-4" type="text" id="title" name="title"
        value="{{this.title}}">
      <label for="entry" class="text-lg font-semibold mb-2">Entry:</label>
      <textarea id="entry" name="entry"
        class="border border-gray-300 rounded-md py-2 px-3 h-40 resize-none">{{this.entry}}</textarea>
      <button type="submit"
        class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-md shadow-md my-2 mx-8 transition-colors duration-300">Save</button>
      <button
        class="bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-md shadow-md my-2 mx-8 transition-colors duration-300"
        id="deleteButton" onclick="deleteEntry('{{this.id}}')">Delete Entry</button>
    </form>
  </div>

  <section class="bg-gray-900 flex flex-col text-lg sm:text-3xl text-center">
    <p
      class=" p-8 text-2xl sm:text-4xl font-bold tracking-wider text-center mb-6 bg-gradient-to-b from-gray-400 to-slate-800">
      <span class="text-white">Entry info:</span>
    </p>
    <p
      class="{{this.angerColor}} p-6 border-2 border-gray-300 rounded-lg hover:bg-red-800 hover:shadow-md transition duration-300">
      Anger: {{this.anger}}</p>
    <p
      class="{{this.fearColor}} p-6 border-2 border-gray-300 rounded-lg hover:bg-orange-700 hover:shadow-md transition duration-300">
      Fear: {{this.fear}}</p>
    <p
      class="{{this.sadnessColor}} p-6 border-2 border-gray-300 rounded-lg hover:bg-blue-800 hover:shadow-md transition duration-300">
      Sadness: {{this.sadness}}</p>
    <p
      class="{{this.disgustColor}} p-6 border-2 border-gray-300 rounded-lg hover:bg-purple-800 hover:shadow-md transition duration-300">
      Disgust: {{this.disgust}}</p>
    <p
      class="{{this.surpriseColor}} p-6 border-2 border-gray-300 rounded-lg hover:bg-green-800 hover:shadow-md transition duration-300">
      Surprise: {{this.surprise}}</p>
    <p
      class="{{this.joyColor}} p-6 border-2 border-gray-300 rounded-lg hover:bg-yellow-700 hover:shadow-md transition duration-300">
      Joy: {{this.joy}}</p>
  </section>

</main>


<script>
  function deleteEntry(entryId) {
    if (confirm('Are you sure you want to delete this entry?')) {
      // Send a DELETE request to delete the entry
      fetch('/mood/' + entryId, {
        method: 'DELETE'
      })
        .then(response => {
          if (response.ok) {
            // Entry deleted successfully
            console.log('Entry deleted successfully');
            // Redirect to the mood page
            window.location.href = '/mood';
          } else {
            // Error deleting entry
            console.error('Failed to delete entry');
          }
        })
        .catch(error => {
          // Error with the request
          console.error(error);
        });
    }
  }
</script>