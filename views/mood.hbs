
<button class="new-entry" onclick="redirectToEntry()">Create Entry</button>

{{!-- section that outputs the data from the tables --}}
<main class="">
  {{#each entry}}
    <div class="rounded-lg p-4 m-10 shadow-lg hover:shadow-2xl justify-start bg-sky-200"> 
      <a href="/mood/{{this.id}}"> <!-- Clickable link with entry ID as a parameter -->
        <p class= "text-l md:text-xl lg:text-3xl">Title: {{this.title}}</p>
        <p class= "text-sm md:text-base lg:text-l">Entry: {{this.entry}}</p>
      </a>
    </div>
  {{/each}}
</main>


<script>
  function redirectToEntry() {
    window.location.href = "/entry";
  }
</script>
