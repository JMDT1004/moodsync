<button class="new-entry" onclick="redirectToEntry()">Create Entry</button>

{{!-- section that outputs the data from the tables --}}

  {{#each entry}}
  <!-- Clickable link with entry ID as a parameter -->
<div class="flex flex-col justify-center rounded-lg p-2 mx-2 my-8 shadow-lg hover:shadow-2xl sm:w-3/5 sm:mx-auto w-full transform bg-gradient-to-b from-gray-500 to-gray-900  hover:-translate-y-1 hover:scale-105">
  <a href="/mood/{{this.id}}" class="block">
    <section class="transform hover:shadow-xl {{this.color}} rounded-lg p-4">
      <p class="text-white text-center text-xl lg:text-3xl">{{this.title}}</p>
      <p class="truncate text-center text-black p-4 m-4 bg-gray-200 text-sm md:text-base lg:text-lg">{{this.entry}}</p>
    </section>
  </a>
</div>
 

  {{/each}}


<script>
  function redirectToEntry() {
    window.location.href = "/entry";
  }
</script>