<h1>How are we feeling Today?</h1>

<form class="form-entry" action="/mood" method="POST" class="form-container">
    <button class="pbtn" style="">
        <i class="fas fa-pencil-alt"></i>
    </button>
    <input name="title" type="text" placeholder="Title" class="title-input">
    <input name="text" type="text" placeholder="What mood are we in today?" class="text-input">
    <button class="tbtn">
        <i class="far fa-trash-alt"></i>
    </button>
</form>




<table>
    <tr>
        <th class="vertical-table">Day Dataset Table</th>
        <th class="entry-number">Entry 1</th>
        <th class="empty-th">
            <div class="entry-title"></div>
            <div class="entry-text"></div>
            <div class="mood-data"></div>
        </th>
</table>
